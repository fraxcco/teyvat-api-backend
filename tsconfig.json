{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitOverride": true,
		"forceConsistentCasingInFileNames": true,
		"skipDefaultLibCheck": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests/**/*", "jest.config.js"]
}